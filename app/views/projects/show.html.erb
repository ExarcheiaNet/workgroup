<h1> <%= @project.name %></h1>

<%= form_for @project do |f| %>
  <%= f.select :user_ids do %>
    <%= options_from_collection_for_select(User.all, :id, :email) %> 
  <% end %>

  <%= f.submit "Add User" %>
<% end %> 

<ul class="users">
  <% @project.users.each do |user| %>
    <li><%= user.email %> </li>
  <% end %>
</ul>

<%= form_for [@project, ProjectStatus.new ] do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :project_id, value: @project.id %>
  <%= f.text_field :text, placeholder: "New status..." %>
  <%= f.submit "Update Status" %>
<% end %> 

<ul>
  <% @project.statuses.each do |status| %>
    <li><%= status.text %> - <%= status.updated_at %></li>
  <% end %>
</ul>